{
  "name": "archivist",
  "version": "0.1.0",
  "description": "A Bun-based tool for archiving web content as LLM context using Pure.md API",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "archive": "bun run src/cli.ts",
    "dev": "bun run --watch src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0"
  }
}
