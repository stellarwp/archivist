{
  "name": "@stellarwp/archivist",
  "version": "0.1.0-beta.2",
  "description": "A Bun-based tool for archiving web content as LLM context using Pure.md API",
  "keywords": ["web-archiver", "content-extraction", "pure-md", "llm", "web-crawler", "bun"],
  "homepage": "https://github.com/stellarwp/archivist#readme",
  "bugs": {
    "url": "https://github.com/stellarwp/archivist/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stellarwp/archivist.git"
  },
  "license": "MIT",
  "author": "StellarWP",
  "module": "src/cli.ts",
  "type": "module",
  "bin": {
    "archivist": "./src/cli.ts"
  },
  "files": [
    "src",
    "archivist.config.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "archive": "bun run src/cli.ts",
    "dev": "bun run --watch src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun test && bunx tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0"
  }
}
