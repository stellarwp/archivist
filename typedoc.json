{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts"],
  "out": "docs/generated",
  "name": "Archivist API",
  "readme": "README.md",
  "plugin": ["typedoc-plugin-markdown"],
  "githubPages": true,
  "exclude": [
    "**/node_modules/**",
    "**/tests/**",
    "**/examples/**"
  ],
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeExternals": true,
  "includeVersion": true,
  "categorizeByGroup": true,
  "categoryOrder": [
    "Services",
    "Strategies", 
    "Utilities",
    "Types",
    "*"
  ],
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "sidebarLinks": {
    "GitHub": "https://github.com/stellarwp/archivist",
    "Documentation": "https://github.com/stellarwp/archivist/blob/main/README.md"
  }
}